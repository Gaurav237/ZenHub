<link rel="stylesheet" href="/css/user_profile.css">

<div class="container">
  <hr>
  <div id="profile-info" class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="text-center">
        <img class="rounded-circle" src="https://static.vecteezy.com/system/resources/previews/005/544/718/original/profile-icon-design-free-vector.jpg" alt="Profile Image" width="200" height="200">
      </div>
      <div class="text-center mt-3">
        <h2 class="font-weight-bold m-4"> <%= profile_user.name %> </h2>
        <p class="text-muted"> <%= profile_user.email %></p>
      </div>
    </div>
  </div>
  <hr>
  <% if (user.id == profile_user.id) { %>
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="form-container">
          <div class="form-box">
            <h3>Update Profile Information</h3>
            
            <form action="/users/update/<%= profile_user.id %>" method="POST">
              <div class="input-group">
                <div class="input-field">
                  <i class="fa-solid fa-circle-camera"></i>
                  <input type="file" name="avatar" placeholder="Profile Picture">
                </div>

                <div class="input-field">
                  <i class="fa-solid fa-user"></i>
                  <input type="text" name="name" placeholder="Your New Name" required>
                </div>

                <div class="input-field">
                  <i class="fa-solid fa-envelope"></i>
                  <input type="text" name="email" placeholder="Your Email" required>
                </div>

                <div class="input-field">
                  <i class="fa-solid fa-lock"></i>
                  <input type="password" name="password" placeholder="Your New Password" required>
                </div>
              </div>

              <div class="btn-field">
                <button type="submit">UPDATE</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <hr>
  <% } %> 

</div>
